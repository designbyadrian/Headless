<?xml version='1.0' encoding='utf-8'?>
<widget id="com.designbyadrian.headless" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Headless</name>
    <description>
        A simple headless browser
    </description>
    <author email="adrian@designbyadrian.com" href="http://designbyadrian.com">
        Design by Adrian Ltd.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <gap:plugin name="de.appplant.cordova.plugin.printer" />
    <gap:plugin name="com.bez4pieci.cookies" />
</widget>
